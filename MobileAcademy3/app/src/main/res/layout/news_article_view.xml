<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/article_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_image_gray_24dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_gravity="center"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/article_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/placeholder_title_text"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:lines="2"
                android:ellipsize="end"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/article_image"
                android:layout_toStartOf="@+id/article_date"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/article_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/placeholder_date_text"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="@android:color/darker_gray"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/article_title"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>